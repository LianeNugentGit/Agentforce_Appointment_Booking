    <formulas>
        <name>dueDateoffset</name>
        <dataType>DateTime</dataType>
        <expression>NOW()</expression>
    </formulas>
    <formulas>
        <name>Formatted_DueDate</name>
        <dataType>DateTime</dataType>
        <expression>IF(
{!CustomerDueDate} &gt; {!WorkTypeSLADueDate}, 
{!WorkTypeSLADueDate}, 
{!CustomerDueDate})</expression>
    </formulas>
    <formulas>
        <name>WorkTypeSLADueDate</name>
        <dataType>DateTime</dataType>
        <expression>IF( ({!EarliestStart}+{!Get_Work_Type.FSL__Due_Date_Offset__c})&gt;({!EarliestStart}+5), 
{!EarliestStart}+5, 
{!EarliestStart} + {!Get_Work_Type.FSL__Due_Date_Offset__c}+{!Get_Work_Type.EstimatedDuration})</expression>
    </formulas>
